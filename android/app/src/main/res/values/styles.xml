<resources>

    <style name="Theme" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/purple</item>
    </style>

    <style name="AppTheme.Widget" parent="AppTheme" />
    <style name="AppTheme.Widget.Button" parent="AppTheme.Widget" />

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.noTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransparentButton" parent="AppTheme">
        <item name="colorButtonNormal">#00000000</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:divider">@color/purple</item>
        <item name="android:dividerHeight">4dp</item>
    </style>

    <style name="AppTheme.LinkButton" parent="AppTheme.Widget.Button">
        <item name="android:background">#00000000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorButtonNormal">#00000000</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>



</resources>
