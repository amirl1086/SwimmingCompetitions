<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/abstract_swimming_pool"
    tools:context="com.app.swimmingcompetitions.swimmingcompetitions.ViewCompetitionResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="11">

        <TextView
            android:id="@+id/header_empty_space"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/image_first_place"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:contentDescription="@string/first_place"
            android:src="@drawable/first_place" />

        <ImageView
            android:id="@+id/image_second_place"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/second_place" />

        <ImageView
            android:id="@+id/image_third_place"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/third_place" />

    </LinearLayout>

    <ListView
        android:id="@+id/results_list_items"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
