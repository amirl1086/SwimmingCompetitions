<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="com.app.swimmingcompetitions.swimmingcompetitions.ViewCompetitionResultsActivity">


    <TextView
        android:id="@+id/result_list_item_ages"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/result_list_item_males"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/males_participants"
        android:layout_width="match_parent"
        android:textSize="22sp"
        android:textDirection="rtl"
        android:textAlignment="center"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/result_list_item_females"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_height="40dp" />


    <TextView
        android:id="@+id/females_participants"
        android:layout_width="match_parent"
        android:textSize="22sp"
        android:textDirection="rtl"
        android:textAlignment="center"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>