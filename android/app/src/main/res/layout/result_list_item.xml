<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    tools:context="com.app.swimmingcompetitions.swimmingcompetitions.ViewCompetitionResultsActivity">


    <TextView
        android:id="@+id/result_list_item_ages"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="12">

        <!--<TextView
            android:id="@+id/result_list_item_males"
            android:layout_width="match_parent"
            android:layout_height="55dp" />-->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/iteration_screen" />

        <TextView
            android:id="@+id/result_list_item_males_1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/iteration_screen" />

        <TextView
            android:id="@+id/result_list_item_males_2"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/iteration_screen" />

        <TextView
            android:id="@+id/result_list_item_males_3"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="55dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/result_list_item_males_results"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/result_list_item_males"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_list_item_ages" />

    <TextView
        android:id="@+id/result_list_item_females"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_list_item_males"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/result_list_item_females_results"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/result_list_item_females"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_list_item_males_results"
        app:layout_constraintVertical_bias="0.0" />

</LinearLayout>