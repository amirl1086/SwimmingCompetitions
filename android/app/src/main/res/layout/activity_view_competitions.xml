<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstract_swimming_pool"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    tools:context="com.app.swimmingcompetitions.swimmingcompetitions.ViewCompetitionsActivity">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/competitions_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purple"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

<!--            <TextView
                android:id="@+id/list_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/list_of_competitions_txt"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />-->

            <ListView
                android:id="@+id/competitions_list"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15sp"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:divider="@color/purple"
                android:dividerHeight="1dp" />

<!--            <Button
                android:id="@+id/add_competition_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:onClick="switchToCreateNewCompetitionActivity"
                android:text="@string/add_competition_text_btn"
                android:textSize="25sp"
                android:textStyle="bold"
                android:theme="@style/AppTheme.TransparentButton" />-->

        </LinearLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/home_page_header"
        app:menu="@menu/tool_bar_menu" />

</android.support.v4.widget.DrawerLayout>
